priory-color = #5D4037
focus-color = #8D6E63
text-color = #3E2723

@charset "UTF-8";

body {
  max-width: 700px;
  width: 100%;
  margin: auto;
  padding: 0 10px;
  color: text-color;
  font-family: 'メイリオ', 'Hiragino Kaku Gothic Pro', sans-serif;
  text-align: center;
  line-height: 1.5;
}

table {
  text-align: left;
}

.list {
  td {
    width: 50%;
  }
}

section {
  margin-bottom: 30px;

  h2 {
    margin-bottom: 10px;
  }
}

ul {
  text-align: left;
  width: 100%;
  padding-left: 5%;
}

img {
  width: 100%;
  max-width: 400px;
}

.button {
  padding: 10px 5px;
  text-decoration: none;
  border: 2px solid text-color;
  display: block;
  width: 200px;
  margin: auto;
  color: text-color;
}
